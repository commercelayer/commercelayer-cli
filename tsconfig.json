{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["ES6", "ES2015", "ESNEXT", "dom"],
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "#typings": ["./typings/index"],
      "#commands/*": ["./commands/*"]
    }
  },
  "exclude": ["node_modules", "lib", "test"]
}
